    $(document).ready(function () {
        $('#btnSave').click(function (e) {
            var isValid = true;

           
            if (document.getElementById("txtSchemeDes").value == ""|| document.getElementById("txtSchemeDes").value ==0) {
                isValid = false;
                $(txtSchemeDes).css({
                    "border": "1px solid red",
