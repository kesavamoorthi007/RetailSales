                });

                alert("Please Enter Scheme Description");
                return false;
            }
            else {
                $(txtSchemeDes).css({
                    "border": "",
                    "background": ""
                });
            } 
            
            if (document.getElementById("txtTrasactionName").value == ""||document.getElementById("txtTrasactionName").value == 0) {
                isValid = false;
                $(txtTrasactionName).css({
                    "border": "1px solid red",
                    "background": "#FFCECE"
                });

