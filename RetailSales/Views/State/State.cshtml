@model RetailSales.Models.Master.State;

@{
    ViewData["Title"] = "State";

}

<style>
    .mandatory {
        color: red;
        position: relative;
        top: 2px;
        left: 5px;
    }
</style>

<script type="text/javascript">
    @if (TempData["notice"] != null)
    {
        @:alert('@TempData["notice"]');
    }
</script>

<div class="row wrapper border-bottom page-heading">
    <div class="col-lg-12">

        <ol class="breadcrumb">
            <li class="active"> <strong>State </strong> </li>
        </ol>
    </div>
</div>
<div class="wrapper-content ">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="widgets-container">
                    @using (Html.BeginForm("State", "State", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <form>
                            <br />
                            <div class="row">
                                <div class="col-lg-3"></div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <br /><label for="inputName3" class="col-sm-4 control-label">Country Name<label class="mandatory">*</label></label>
                                        <div class="col-sm-12">
                                            @Html.DropDownListFor(C => C.ConName, Model.Cuntylst, "---Please Select---", new { @id = "ddlconName", @Class = "form-control _select", @TabIndex = 1 })
                                            @Html.HiddenFor(C => C.ID)
                                            
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-3"></div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <br /><label for="inputName3" class="col-sm-4 control-label">State Name<label class="mandatory">*</label></label>
                                        <div class="col-sm-12">
                                            @Html.TextBoxFor(C => C.StatName, new { @id = "txtStateName", @class = "form-control", @TabIndex = 1 })
                                            @Html.HiddenFor(C => C.ID)
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-3"></div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <br /><label for="inputName3" class="col-sm-4 control-label">State code<label class="mandatory">*</label></label>
                                        <div class="col-sm-12">
                                            @Html.TextBoxFor(C => C.StatCode, new { @id = "txtStateCode", @class = "form-control", @TabIndex = 1 })

                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div style="height:30px;"></div>
                            <div class="col-lg-8"></div>
                            <button type="submit" class="btn btn-success" type="button" id="btnSave">Submit</button>
                            <button class="btn btn-danger" type="button" causesvalidation="false" onclick="location.href='@Url.Action("ListState", "State")'">Cancel</button>



                        </form>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $(function () {
        $('._select').select2();
    });

    $(document).ready(function () {
        $('#btnSave').click(function (e) {
            var isValid = true;
            
            if (document.getElementById("ddlconName").value == "") {
                isValid = false;
                $(ddlconName).css({
                    "border": "1px solid red",
                    "background": "#FFCECE"
                });

                alert("Please Select Country Name");
                return false;
            }
            else {
                $(ddlconName).css({
                    "border": "",
                    "background": ""
                });
            }
            if (document.getElementById("txtStateName").value == "" ) {
                isValid = false;
                $(txtStateName).css({
                    "border": "1px solid red",
                    "background": "#FFCECE"
                });

                alert("Please Enter State Name");
                return false;
            }
            else {
                $(txtStateName).css({
                    "border": "",
                    "background": ""
                });
            }

             if (document.getElementById("txtStateCode").value == "" ) {
                isValid = false;
                $(txtStateCode).css({
                    "border": "1px solid red",
                    "background": "#FFCECE"
                });

                alert("Please Enter State code");
                return false;
            }
            else {
                $(txtStateCode).css({
                    "border": "",
                    "background": ""
                });
            }
            if (isValid == false)
                e.preventDefault();
        });

    });
</script>

