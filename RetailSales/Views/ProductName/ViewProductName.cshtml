@model RetailSales.Models.Master.ProductName

@{
    Layout = "_PopupLayout";
    ViewData["Title"] = "ProductName";
}
<style>
    .newwidth {
        width: 120px;
    }

    .text-right {
        text-align: right;
    }
</style>
<style>
    .mandatory {
        color: red;
        position: relative;
        top: 2px;
        left: 5px;
    }
</style>

<script type="text/javascript">
    @if (TempData["notice"] != null)
    {
        @:alert('@TempData["notice"]');
    }
</script>
<div style="height:25px;"></div>
<div class="row wrapper border-bottom page-heading">
    <div class="col-lg-12">

        <ol class="breadcrumb">
            <li class="active"> <strong>View Product </strong> </li>
        </ol>
    </div>
</div>

<div class="wrapper-content ">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="widgets-container">
                    @using (Html.BeginForm("ViewProductName", "ProductName", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <form>
                            <br />
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label for="inputName3" class="col-sm-4 control-label"><strong>Product Category :</strong><label class="mandatory"></label></label>

                                        @Html.HiddenFor(C => C.ID)
                                        @Html.DisplayFor(C => C.Category)

                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label for="inputName3" class="col-sm-4 control-label"><strong>Product Name :</strong><label class="mandatory"></label></label>

                                        @Html.DisplayFor(C => C.ProName)

                                    </div>
                                </div>

                            </div>
                            <div style="height:20px;"></div>
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="form-group">
                                        <label for="inputName3" class="col-sm-4 control-label"><strong>Description :</strong><label class="mandatory"></label></label>

                                        @Html.DisplayFor(C => C.Description)

                                    </div>
                                </div>
                                

                            </div>

                            <div style="height:20px;"></div>
                            <div class="row">
                                <div class="col-md-12">


                                    <table class="display nowrap table  responsive nowrap table-bordered" id="dataTable">
                                        <thead>
                                            <tr>

                                                <th>Variant</th>
                                                <th>Unit</th>
                                                <th> HSN </th>
                                                <th> Min Qty </th>
                                                <th> Rate (₹) </th>
                                             <th>Location</th>
                                                    <th>Shop BIN No</th>
                                                    <th>Godown BIN No</th>
                                                    <th>Product Description </th>
                                        </thead>

                                        <tbody>
                                            @{
                                                int i = 0;

                                                foreach (var item in Model.ProductNameLst.ToList())
                                                {

                                                    <tr>
                                                        <td>@Html.DisplayFor(o => o.ProductNameLst[i].Variant)</td>
                                                        <td>@Html.DisplayFor(o => o.ProductNameLst[i].Uom)</td>
                                                        <td>@Html.DisplayFor(o => o.ProductNameLst[i].Hsn)</td>
                                                        <td>@Html.DisplayFor(o => o.ProductNameLst[i].MinQty)</td>
                                                        <td>@Html.DisplayFor(o => o.ProductNameLst[i].Rate)</td>
                                                        <td>@Html.DisplayFor(o => o.ProductNameLst[i].Location)</td>
                                                        <td>@Html.DisplayFor(o => o.ProductNameLst[i].ShopBin)</td>
                                                        <td>@Html.DisplayFor(o => o.ProductNameLst[i].GodownBin)</td>
                                                        <td>@Html.DisplayFor(o => o.ProductNameLst[i].ProdDesc)</td>
                                                        @*<td><a href="@Url.Action("AddCF", "ProductName")?id=@item.ID" class='fancybox' data-fancybox-type='iframe'><img src='../Images/plus.png' alt='Add' /></a></td>*@
                                                    </tr>
                                                    //i = i + 1;
                                                    i++;
                                                }
                                            }

                                        </tbody>
                                    </table>
                                </div>
                            </div>

                            <div style="height:30px;"></div>
                            <div class="col-lg-8"></div>
                            <input type="button" class="btn btn-danger" value="Close" onClick="window.parent.jQuery.fancybox.close();" />



                        </form>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

