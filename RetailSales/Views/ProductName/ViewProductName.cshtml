@model RetailSales.Models.Master.ProductName

@{
    ViewData["Title"] = "ProductName";
}
<style>
    .mandatory {
        color: red;
        position: relative;
        top: 2px;
        left: 5px;
    }
</style>

<script type="text/javascript">
    @if (TempData["notice"] != null)
    {
        @:alert('@TempData["notice"]');
    }
</script>
<div style="height:25px;"></div>
<div class="row wrapper border-bottom page-heading">
    <div class="col-lg-12">

        <ol class="breadcrumb">
            <li class="active"> <strong>View Product </strong> </li>
        </ol>
    </div>
</div>

<div class="wrapper-content ">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="widgets-container">
                    @using (Html.BeginForm("ViewProductName", "ProductName", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <form>
                            <br />
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label for="inputName3" class="col-sm-3 control-label"><strong>Product Category :</strong><label class="mandatory"></label></label>

                                        @Html.HiddenFor(C => C.ID)
                                        @Html.DisplayFor(C => C.Category)

                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label for="inputName3" class="col-sm-3 control-label"><strong>Product Name :</strong><label class="mandatory"></label></label>

                                        @Html.DisplayFor(C => C.ProName)

                                    </div>
                                </div>

                            </div>
                            <div style="height:20px;"></div>
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="form-group">
                                        <label for="inputName3" class="col-sm-1 control-label"><strong>Description :</strong><label class="mandatory"></label></label>

                                        @Html.DisplayFor(C => C.Description)

                                    </div>
                                </div>
                                

                            </div>

                            <div style="height:20px;"></div>
                            <div class="row">
                                <div class="col-md-12" style="overflow-x:scroll; min-width:300px; min-height:300px;">


                                    <table class="table table-striped table-hover" id="dataTable">
                                        <thead>
                                            <tr>

                                                <th>Variant</th>
                                                <th>Unit</th>
                                                <th> HSN </th>
                                                <th> Min Qty </th>
                                                <th> Rate (₹) </th>
                                                <th> Product Description </th>
                                                <th></th>
                                        </thead>

                                        <tbody>
                                            @{
                                                int i = 0;

                                                foreach (var item in Model.ProductNameLst.ToList())
                                                {

                                                    <tr>
                                                        <td>@Html.DisplayFor(o => o.ProductNameLst[i].Variant)</td>
                                                        <td>@Html.DisplayFor(o => o.ProductNameLst[i].Uom)</td>
                                                        <td>@Html.DisplayFor(o => o.ProductNameLst[i].Hsn)</td>
                                                        <td>@Html.DisplayFor(o => o.ProductNameLst[i].MinQty)</td>
                                                        <td>@Html.DisplayFor(o => o.ProductNameLst[i].Rate)</td>
                                                        <td>@Html.DisplayFor(o => o.ProductNameLst[i].ProdDesc)</td>
                                                    </tr>
                                                    //i = i + 1;
                                                    i++;
                                                }
                                            }

                                        </tbody>
                                    </table>
                                </div>
                            </div>

                            <div style="height:20px;"></div>

                            <button class="btn btn-danger" type="button" causesvalidation="false" onclick="location.href='@Url.Action("ListProductName", "ProductName")'">Cancel</button>

                            @* <button type="submit" class="btn btn-success" type="button" id="btnSave">Sales Return</button> *@
                            @* <button class="btn btn-danger" type="button" causesvalidation="false" onclick="location.href='@Url.Action("ListStockTransfer", "StockTransfer")'">Cancel</button>*@



                        </form>
                    }
                </div>
            </div>
        </div>
    </div>
</div>




