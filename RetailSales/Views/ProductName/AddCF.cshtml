    function AddRow() {
        var opt = "";
        var rem= "";
        $.ajax({
            type: "POST",
            url: 'GetUOMGrpJSON',
            success: function (data) {

                $.each(data, function () {
                    opt += "<option value=" + this.value + ">" + this.text + "</option>";
                });
                $.ajax({
                     type: "POST",
            url: 'GetUOMGrpJSON',
            success: function (data) {

                $.each(data, function () {
                    rem += "<option value=" + this.value + ">" + this.text + "</option>";
                });
                AppendRow(opt,rem);
            }
        }) 
        }
        })
    }
    function removeRow(id) {
        var table = document.getElementById("dataTable");
        var rowCount = table.rows.length;
        var row = document.getElementById('trBook' + id);
        var j = 0;
        $('tr.chkitemlst').each(function () {
            if ($(this).css('display') !== 'none') {
                j += 1;
            }
        });
        if (j > 1) {
            row.style.display = "none";
            document.getElementById('Isvalid' + id).value = "N";
        }
        else {
            alert("Cannot delete all the rows.")
        }
    }
    function AppendRow(opt,rem) {
        var index = $("#tbBooks").children("tr").length;

        var Src = "<td><select style = 'width: 220px;' class='form-control _select newcss' id='ddlSUOM" + index + "' name='ProductDetailTablelst[" + index + "].Src'><option value=''>---Please select---</option>" + opt + "</select></td>";

        var Des = "<td><select style = 'width: 220px;' class='form-control _select newcss' id='ddlDUOM" + index + "' name='ProductDetailTablelst[" + index + "].Des'><option value=''>--Please select--</option>" + rem + "</select></td>";

        var CF = "<td><input class='form-control' id='txtCF" + index + "' name='ProductDetailTablelst[" + index + "].CF'  style='width: 80px;' min='0'' max='99' /></td>";

        var removeCell = "<td><input id='Isvalid" + index + "' name='ProductDetailTablelst[" + index + "].Isvalid' type='hidden' value='Y'><img  src='../Images/delete.png' onclick='removeRow(" + index + ");'  style='cursor:pointer' /><input name='ProductDetailTablelst.Index' type='hidden' value='" + index + "'  /></td>";


        var newRow = "<tr class='chkitemlst'  style='height: 30px;border-bottom: 1px dashed #ddd;'  id='trBook" + index + "'>" + Src + Des + CF + removeCell + "</tr>";
        //alert(Packing);
        $("#tbBooks").append(newRow);

        $(function () {
            $('._select').select2();
        });
    }
    

</script>


