@model RetailSales.Models.StockTransfer

@{
    ViewData["Title"] = "Stock Transfer";
}
<style>
    .mandatory {
        color: red;
        position: relative;
        top: 2px;
        left: 5px;
    }
</style>

<script type="text/javascript">
    @if (TempData["notice"] != null)
    {
        @:alert('@TempData["notice"]');
    }
</script>
<div style="height:25px;"></div>
<div class="row wrapper border-bottom page-heading">
    <div class="col-lg-12">

        <ol class="breadcrumb">
            <li class="active"> <strong>View Stock Transfer </strong> </li>
        </ol>
    </div>
</div>

<div class="wrapper-content ">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="widgets-container">
                    @using (Html.BeginForm("ViewStockTransfer", "StockTransfer", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <form>
                            <br />
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label for="inputName3" class="col-sm-5 control-label">Doc ID:<label class="mandatory"></label></label>
                                        
                                            @Html.HiddenFor(C => C.ID)
                                            @Html.DisplayFor(C => C.Documentid)
                                        
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label for="inputName3" class="col-sm-4 control-label">Doc Date:<label class="mandatory"></label></label>
                                        
                                            @Html.DisplayFor(C => C.DocumentDate)
                                        
                                    </div>
                                </div>
                                
                            </div>
                            <div style="height:20px;"></div>
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label for="inputName3" class="col-sm-5 control-label">From Location:<label class="mandatory"></label></label>
                                        
                                            @Html.DisplayFor(C => C.Flocation)
                                        
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group">

                                        <label for="inputName3" class="col-sm-4 control-label">To Location:<label class="mandatory"></label></label>
                                        
                                            @Html.DisplayFor(C => C.Tlocation)
                                        
                                    </div>
                                </div>
                            </div>
                            <div style="height:20px;"></div>
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="form-group">

                                        <label for="inputName3" class="col-sm-5 control-label">From BinID:<label class="mandatory"></label></label>
                                        
                                            @Html.DisplayFor(C => C.FBin)
                                        
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group">

                                        <label for="inputName3" class="col-sm-4 control-label">To BinID:<label class="mandatory"></label></label>
                                        
                                            @Html.DisplayFor(C => C.TBin)
                                        
                                    </div>
                                </div>
                            </div>

                            <div style="height:20px;"></div>
                            <div class="row">
                                <div class="col-md-12" style="overflow-x:scroll; min-width:300px; min-height:300px;">


                                    <table class="table table-striped table-hover" id="dataTable">
                                        <thead>
                                            <tr>

                                                <th>Product Category</th>
                                                <th>Product Name</th>
                                                <th>Variant</th>
                                                <th>Unit</th>
                                                <th> Stock </th>
                                                <th> Qty </th>
                                                <th> Rate (₹)</th>
                                                <th> Amount (₹)</th>
                                                <th></th>
                                        </thead>

                                        <tbody>
                                            @{
                                                int i = 0;

                                                foreach (var item in Model.StockTransferItemLst.ToList())
                                                {

                                                    <tr>
                                                        <td>@Html.DisplayFor(o => o.StockTransferItemLst[i].Item)</td>
                                                        <td>@Html.DisplayFor(o => o.StockTransferItemLst[i].Product)</td>
                                                        <td>@Html.DisplayFor(o => o.StockTransferItemLst[i].Varient)</td>
                                                        <td>@Html.DisplayFor(o => o.StockTransferItemLst[i].Unit)</td>
                                                        <td>@Html.DisplayFor(o => o.StockTransferItemLst[i].Stock)</td>
                                                        <td>@Html.DisplayFor(o => o.StockTransferItemLst[i].Qty)</td>
                                                        <td style="text-align: right">@Html.DisplayFor(o => o.StockTransferItemLst[i].Rate)</td>
                                                        <td style="text-align: right">@Html.DisplayFor(o => o.StockTransferItemLst[i].Amount)</td>
                                                    </tr>
                                                    //i = i + 1;
                                                    i++;
                                                }
                                            }

                                        </tbody>
                                    </table>
                                </div>
                            </div>


                            

                            
                            @* <button type="submit" class="btn btn-success" type="button" id="btnSave">Sales Return</button> *@
                           @* <button class="btn btn-danger" type="button" causesvalidation="false" onclick="location.href='@Url.Action("ListStockTransfer", "StockTransfer")'">Cancel</button>*@
                            <button class="btn btn-danger" type="button" causesvalidation="false" onclick="location.href='@Url.Action("ListStockTransfer", "StockTransfer")'">Cancel</button>


                        </form>
                    }
                </div>
            </div>
        </div>
    </div>
</div>



