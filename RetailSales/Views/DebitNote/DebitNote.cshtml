                    tcr += eval(cr);



                }
                j += 1;
            });

            document.getElementById("txtTotcri").value = tcr.toFixed(2);
            document.getElementById("txtAmtWd").value = withDecimal(tcr.toFixed(2));

        }
        catch (ex) {
