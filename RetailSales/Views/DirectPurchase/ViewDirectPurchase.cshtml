@model RetailSales.Models.DirectPurchase
@{
    ViewData["Title"] = "Direct Purchase";
}
<style>
    .newwidth {
        width: 120px;
    }
</style>
<div style="height:25px;"></div>
<div class="row wrapper border-bottom page-heading">
    <div class="col-lg-12">

        <ol class="breadcrumb">
            <li class="active"> <strong>View Direct Purchase</strong> </li>
        </ol>
    </div>
</div>

<div class="wrapper-content ">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="widgets-container">
                    @using (Html.BeginForm("ViewDirectPurchase", "DirectPurchase", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <form>
                            <br />
                            <div class="row">
                                <div class="col-lg-4">
                                    <div class="form-group">
                                        <label for="inputName3" class="col-sm-5 control-label">Doc No<label class="mandatory"></label></label>
                                        <div class="col-sm-8">
                                            @Html.HiddenFor(C => C.ID)
                                            @Html.DisplayFor(C => C.doc)
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-4">
                                    <div class="form-group">
                                        <label for="inputName3" class="col-sm-4 control-label">Doc Date<label class="mandatory"></label></label>
                                        <div class="col-sm-8">
                                            @Html.DisplayFor(C => C.DocDate)
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-4">
                                    <div class="form-group">
                                        <label for="inputName3" class="col-sm-5 control-label">Supplier Name<label class="mandatory"></label></label>
                                        <div class="col-sm-8">
                                            @Html.DisplayFor(C => C.Suppid)
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div style="height:20px;"></div>
                            <div class="row">
                                <div class="col-lg-4">
                                    <div class="form-group">

                                        <label for="inputName3" class="col-sm-4 control-label">Supplier Address<label class="mandatory"></label></label>
                                        <div class="col-sm-8">
                                            @Html.DisplayFor(C => C.Supplieraddress)
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-4">
                                    <div class="form-group">

                                        <label for="inputName3" class="col-sm-4 control-label">State<label class="mandatory"></label></label>
                                        <div class="col-sm-8">
                                            @Html.DisplayFor(C => C.State)
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-4">
                                    <div class="form-group">

                                        <label for="inputName3" class="col-sm-4 control-label">City<label class="mandatory"></label></label>
                                        <div class="col-sm-8">
                                            @Html.DisplayFor(C => C.City)
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div style="height:20px;"></div>
                            <div class="row">
                                <div class="col-lg-4">
                                    <div class="form-group">
                                        <label for="inputName3" class="col-sm-4 control-label">Ref No<label class="mandatory"></label></label>
                                        <div class="col-sm-8">
                                            @Html.DisplayFor(C => C.refno)

                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-4">
                                    <div class="form-group">
                                        <label for="inputName3" class="col-sm-4 control-label">Ref Date<label class="mandatory"></label></label>
                                        <div class="col-sm-8">
                                            @Html.DisplayFor(C => C.refdate)
                                        </div>
                                    </div>
                                </div>
                            </div>


                            <div style="height:30px;"></div>
                            <div class="row">
                                <div class="col-lg-12">

                                    <table id="example7" class="display nowrap table  responsive nowrap table-bordered">
                                        <thead>
                                            <tr>

                                                <th>Item</th>
                                                <th>Variant</th>
                                                <th> HSN Code </th>
                                                <th>Tax</th>
                                                <th> Unit </th>
                                                <th> Qty </th>
                                                <th>Rate </th>
                                                <th>Amount </th>
                                               <th> Frieght charges</th>
                                                <th> Disc amount</th>
                                                <th>CGST</th>
                                                <th>SGST</th>
                                                <th>IGST</th>
                                                <th>Total Amount</th>
                                            </tr>
                                        </thead>

                                        <tbody>
                                            @{
                                                int i = 0;

                                                foreach (var item in Model.DirectPurchaseLst.ToList())
                                                {

                                                    <tr>
                                                        <td>@Html.DisplayFor(o => o.DirectPurchaseLst[i].Item)</td>
                                                        <td>@Html.DisplayFor(o => o.DirectPurchaseLst[i].Varient)</td>
                                                        <td>@Html.DisplayFor(o => o.DirectPurchaseLst[i].Hsn)</td>
                                                        <td>@Html.DisplayFor(o => o.DirectPurchaseLst[i].Tariff)</td>
                                                        <td>@Html.DisplayFor(o => o.DirectPurchaseLst[i].UOM)</td>
                                                        <td>@Html.DisplayFor(o => o.DirectPurchaseLst[i].Qty)</td>
                                                        <td>@Html.DisplayFor(o => o.DirectPurchaseLst[i].Rate)</td>
                                                        <td>@Html.DisplayFor(o => o.DirectPurchaseLst[i].Amount)</td>
                                                        <td>@Html.DisplayFor(o => o.DirectPurchaseLst[i].FrigCharge)</td>
                                                        <td>@Html.DisplayFor(o => o.DirectPurchaseLst[i].DiscAmount)</td>
                                                        <td>
                                                            @Html.HiddenFor(o => o.DirectPurchaseLst[i].CGSTP)
                                                            @Html.HiddenFor(o => o.DirectPurchaseLst[i].SGSTP)
                                                            @Html.HiddenFor(o => o.DirectPurchaseLst[i].IGSTP)
                                                            @Html.DisplayFor(o => o.DirectPurchaseLst[i].CGST)
                                                        </td>
                                                        <td>@Html.DisplayFor(o => o.DirectPurchaseLst[i].SGST)</td>
                                                        <td>@Html.DisplayFor(o => o.DirectPurchaseLst[i].IGST)</td>
                                                        <td>@Html.DisplayFor(o => o.DirectPurchaseLst[i].Total)</td>

                                                    </tr>
                                                    //i = i + 1;
                                                    i++;
                                                }
                                            }

                                        </tbody>
                                    </table>
                                </div>
                            </div>


                            <div style="height:30px;"></div>
                            <div class="row">

                                 <div class="col-md-4" style="overflow-x:scroll; min-width:300px; min-height:300px;">

                                    <table class="table table-striped table-hover" id="dataTable">
                                        <thead>
                                        </thead>
                                        <tbody id="tbBooks">
                                            @{
                                                <tr>

                                                    <th>GROSS</th>
                                                    <td>
                                                        @Html.DisplayFor(C => C.Gross)
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <th>DISCOUNT</th>
                                                    <td>
                                                        @Html.DisplayFor(C => C.Disc)
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <th>Fright</th>
                                                    <td>
                                                        @Html.DisplayFor(C => C.Frieghtcharge)
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <th>CGST</th>
                                                    <td>
                                                        @Html.DisplayFor(C => C.CGST)
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <th>SGST</th>
                                                    <td>
                                                        @Html.DisplayFor(C => C.SGST)
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <th>IGST</th>
                                                    <td>
                                                        @Html.DisplayFor(C => C.IGST)
                                                    </td>
                                                </tr>

                                                <tr>
                                                    <th> ROUND OFF</th>
                                                    <td>
                                                        @Html.DisplayFor(C => C.Round)
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <th> TOTAL </th>
                                                    <td>
                                                        @Html.DisplayFor(C => C.Net)
                                                        <input type="hidden" id="hidnet" />
                                                    </td>


                                                </tr>

                                            }


                                        </tbody>
                                    </table>
                                </div>


                                <div class="col-md-8">
                                    <div class="tabs-container">
                                        <ul class="nav nav-pills nav-fill">
                                            @*<li class="active"><a href="#tab-1" data-toggle="tab">Despatch Address</a></li>*@
                                            <li class="active"><a href="#tab-1" data-toggle="tab">Transporter Details</a></li>


                                        </ul>
                                        <div class="tab-content">


                                            <div class="tab-pane active" id="tab-1">

                                                <div class="row">
                                                    <div class="col-md-12">
                                                        <div class="form-group">
                                                            <div class="tab-pane active" id="tab-1">
                                                                <div class="row">
                                                                    <div class="col-md-6">
                                                                        <div class="form-group">
                                                                            <br />  <label for="inputName3" class="col-sm-4 control-label">Place Of Dispatch<label class="Mandatory"></label></label>

                                                                            <div class="col-sm-8">
                                                                                @Html.DisplayFor(C => C.dispatchname)
                                                                            </div>

                                                                        </div>
                                                                    </div>
                                                                    <div class="col-md-6">
                                                                        <div class="form-group">
                                                                            <br /> <label for="inputName3" class="col-sm-4 control-label">LR.No<label class="Mandatory"></label></label>

                                                                            <div class="col-sm-8">
                                                                                @Html.DisplayFor(C => C.LRno)
                                                                            </div>

                                                                        </div>
                                                                    </div>
                                                                </div>
                                                                <div class="row">
                                                                    <div class="col-md-6">
                                                                        <div class="form-group">

                                                                            <br /> <label for="inputName3" class="col-sm-4 control-label">Transporter Name<label class="Mandatory"></label></label>
                                                                            <div class="col-sm-8">
                                                                                @Html.DisplayFor(C => C.drivername)
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                    <div class="col-md-6">
                                                                        <div class="form-group">

                                                                            <br /><label for="inputName3" class="col-sm-4 control-label">LR.Date<label class="Mandatory"></label></label>
                                                                            <div class="col-sm-8">
                                                                                @Html.DisplayFor(C => C.LRdate)
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                   
                                                                </div>
                                                                @*1st tab*@
                                                            </div>
                                                            @*1st tab*@

                                                        </div>


                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div style="height:10px;"></div>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">

                                        <br /> <label for="inputName3" class="col-sm-2 control-label">Narration<label class="Mandatory"></label></label>
                                        <div class="col-sm-10">
                                            @Html.DisplayFor(C => C.Narration)
                                        </div>
                                    </div>
                                </div>

                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">

                                        <br /> <label for="inputName3" class="col-sm-2 control-label">Amount In Words<label class="Mandatory"></label></label>
                                        <div class="col-sm-10">
                                            @Html.DisplayFor(C => C.Amountinwords)
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div style="height:30px;"></div>
                            <div class="col-lg-8"></div>
                            @* <button type="submit" class="btn btn-success" type="button" id="btnSave">Sales Return</button> *@
                            <button class="btn btn-danger" type="button" causesvalidation="false" onclick="location.href='@Url.Action("ListDirectPurchase", "DirectPurchase")'">Cancel</button>


                        </form>
                    }
                </div>
            </div>
        </div>
    </div>
</div>



