            //document.getElementById('gstError').style.display = 'none';
        } else {

            // If the GST number is invalid, show the error message
            alert("Invalid GST No");
            return false;
           // document.getElementById('gstError').style.display = 'inline';
        }

            if (document.getElementById("txtMobile").value == "" || document.getElementById("txtMobile").value == 0) {
                isValid = false;
                $(txtMobile).css({
                    "border": "1px solid red",
                    "background": "#FFCECE"
                });

                alert("Please Enter Mobile");
                return false;
            }
            else {
                $(txtMobile).css({
                    "border": "",
                    "background": ""
                });
            }


             if (isValid == false){
                  e.preventDefault();
             }
             else{
                 var Category = document.getElementById("ddlCategory").value;
                 var SupplierName = document.getElementById("txtSuppid").value;
                 var SupplierAdd = document.getElementById("txtSuppadd").value;
                 var Days = document.getElementById("txtDays").value;
                 var GST = document.getElementById("gstNumber").value;
                 var State = document.getElementById("ddlState").value;
                 var City = document.getElementById("ddlCity").value;
                 var Mobile = document.getElementById("txtMobile").value;
                 var Landline = document.getElementById("txtLandline").value;
                 var Email = document.getElementById("txtEmail").value;
                 

                $.ajax({
                    type: "POST",
                    url: "SaveSupplier",
                    data: { "Category": Category, "SupplierName": SupplierName,"SupplierAdd": SupplierAdd,"Days": Days,"GST": GST,"State": State,"City": City,"Mobile": Mobile,"Landline": Landline,"Email": Email, },
                    success: function (r) {
                        //alert(r.id)
                            window.parent.AddSupplier(Category,r.id,SupplierAdd,Days,GST,State,City,Mobile,Landline,Email);
                       window.parent.jQuery.fancybox.close();
                    }
                });

             }


        });



    });
</script>



