                    "background": "#FFCECE"
                });

                alert("Please Select Supplier Category");
                return false;
            }
            else {
                $(ddlCategory).css({
                    "border": "",
                    "background": ""
                });
            }
            if (document.getElementById("txtSuppid").value == "" || document.getElementById("txtSuppid").value == 0) {
