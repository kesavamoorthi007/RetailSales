<script>
    $(function () {
        $('._select').select2();
    });
    
    function PopulateDropDown(dropDownId, list) {
        //alert(list);
        $(dropDownId).empty().append('<option selected="selected" value="0">--Please select--</option>');
        if (list != null && list.length > 0) {
            $(dropDownId).removeAttr("disabled");
            $.each(list, function () {
                $(dropDownId).append($("<option></option>").val(this['value']).html(this['text']));
            });
        }
        $(dropDownId).trigger("liszt:updated");
    }
    function changeVarientDetails(id, i) {
        $.ajax({
            url: 'GetVarientJSON',
            type: "post",
            data: { 'id': id },
            cache: false,
            success: function (response) {
                PopulateDropDown("#ddlVarient" + i, response);
            },
            error: function () {
                debugger;
                alert("Please Select Product");
            }
        });
    }
     function changeVarientItem(ItemId, i) {
        var cusid = document.getElementById("ddlSupplier").value;
        
        @* var VariantHsn = concat(variant,hsn); *@
        $.ajax({
            url: 'GetVarientDetails',
            data: { "ItemId": ItemId, "cusid": cusid },
            type: "GET",
            success: function (result) {
                document.getElementById("txtUOM" + i).value = result.uom;
                document.getElementById("txtHsn" + i).value = result.hsn;
                document.getElementById("txtRate" + i).value = result.rate;
                document.getElementById("txtTariff" + i).value = result.gst;
                document.getElementById("CGSTP" + i).value = result.cgst;
                document.getElementById("SGSTP" + i).value = result.sgst;
                document.getElementById("IGSTP" + i).value = result.igst;

            },
            error: function () {
                alert("Data Not Found");
            }
        });
        var j = 0;
        var itemSelected = ItemId;  // Current item ID selected

        $('tr.chkitemlst').each(function () {
            if ($(this).css('display') !== 'none') {
                // Skip the row that is currently being processed
                if (j !== i) {
                    var item = document.getElementById("ddlVarient" + j).value;
                    //alert(item);
                    if (item == itemSelected) {
                        alert("The Variant already Exist");
                        $('#ddlVarient'+i).select2("val", "");
                        return false; // Exit loop as soon as we find a duplicate
                    }
                }
                j += 1;
            }
        });
    }
    function changesupplier(ItemId) {
        $.ajax({
            url: 'GetSupplierDetails',
            data: { "ItemId": ItemId },
            type: "GET",
            success: function (result) {

                document.getElementById("txtSupplieraddress").value = result.add;
                document.getElementById("txtState").value = result.state;
                document.getElementById("txtCity").value = result.city;


                if(result.state == "Tamil Nadu"){
                      
                      //document.getElementById("cg2").style.display = "block";
                      document.getElementById("cg").style.display = "block";
                      document.getElementById("cg1").style.display = "block";
                      //document.getElementById("sg2").style.display = "block";
                      document.getElementById("sg").style.display = "block";
                      document.getElementById("sg1").style.display = "block";
                      //document.getElementById("ig2").style.display = "none";
                      document.getElementById("ig").style.display = "none";
                      document.getElementById("ig1").style.display = "none";
                }
                else{
                    //document.getElementById("cg2").style.display = "none";
                    document.getElementById("cg").style.display = "none";
                    document.getElementById("cg1").style.display = "none";
                    //document.getElementById("sg2").style.display = "none";
                    document.getElementById("sg").style.display = "none";
                    document.getElementById("sg1").style.display = "none";
                    //document.getElementById("ig2").style.display = "block";
                    document.getElementById("ig").style.display = "block";
                    document.getElementById("ig1").style.display = "block";
                }

            },
            error: function () {
                alert("Data Not Found");
            }
        });

    }
